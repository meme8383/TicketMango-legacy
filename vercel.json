{
  "version": 2,
  "builds": [
    {
      "src": "./server/bin/www",
      "use": "@vercel/node"
    },
    {
      "src": "./client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/app.js"
    },
    {
      "source": "/(.*)",
      "destination": "/client/build/"
    }
  ]
}