{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "airbnb-base"
  ],
  "plugins": [
    "import"
  ],
  "env": {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules": {
    "object-curly-newline": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ],
    "camelcase": [
      "error",
      {
        "properties": "never",
        "allow": [
          "[_id]$"
        ]
      }
    ],
    "arrow-body-style": "off"
  }
}
