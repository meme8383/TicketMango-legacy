{
  "name": "ticketmango-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "node -r dotenv/config ./bin/www dotenv_config_path=./config/.env.production.local",
    "start:dev": "nodemon -r dotenv/config ./bin/www dotenv_config_path=./config/.env.development.local",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "config": "^3.3.9",
    "cookie-parser": "~1.4.4",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "ejs": "3.1.7",
    "express": "~4.16.1",
    "http-errors": "~1.6.3",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "morgan": "~1.9.1",
    "sass": "^1.62.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
