{
  "name": "ticketmango-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "npx tsc",
    "start": "npm run build && if-env NODE_ENV=production ?? npm run start:prod || npm run start:dev",
    "start:prod": "node -r dotenv/config ./bin/www dotenv_config_path=./config/.env.production.local",
    "start:dev": "concurrently \"npx tsc --watch\" \"nodemon -r dotenv/config ./bin/www dotenv_config_path=./config/.env.development.local\"",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,md}\""
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cookie-parser": "~1.4.4",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "~4.16.1",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.1.0",
    "morgan": "~1.9.1",
    "validator": "^13.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.8",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.2.3",
    "@types/validator": "^13.7.17",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.59.7",
    "concurrently": "^8.0.1",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  }
}
